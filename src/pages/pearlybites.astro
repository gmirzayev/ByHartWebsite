---
import "../styles/utils.css";
import InternalLayout from "../layouts/InternalLayout.astro";
import TextGrid from "../components/TextGrid.astro";
import ScrollImage from "../components/ScrollImage.astro";
import FrontDesk from "../assets/PearlyBites/PearlyBites_FrontDesk.png";
import Bag from "../assets/PearlyBites/PearlyBites_Bag.png";
import Site from "../assets/PearlyBites/PearlyBites_Site.png";
import ExamRoom from "../assets/PearlyBites/PearlyBites_ExamRoom.png";
import Interiors from "../assets/PearlyBites/PearlyBites_Interiors.png";
import SocialPages from "../assets/PearlyBites/PearlyBites_SocialPages.png";
import Tote from "../assets/PearlyBites/PearlyBites_Tote.png";
import Cards from "../assets/PearlyBites/PearlyBites_BusinessCards.png";
import SocialGrid from "../assets/PearlyBites/PearlyBites_SocialGrid.png";
import Stationary from "../assets/PearlyBites/PearlyBites_Stationary.png";
import Carousel from "../assets/PearlyBites/PearlyBites_SocialCarousel.png";
import Image from "astro/components/Image.astro";
---

<style>
  #pearly-main {
    width: 100%;
    background-color: #f7f4ed;
  }
  .image-flex {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
  }
  .image-92 {
    width: 92%;
    height: auto;
  }
  .image-73 {
    width: 73%;
    height: auto;
  }
  .image-100 {
    width: 100%;
    height: auto;
  }
  .image-42 {
    width: 42%;
    height: auto;
  }
  .image-58 {
    width: 58%;
    height: auto;
  }

  .textbox {
    text-align: center;
  }
  h1 {
    font-family: "Filson Pro";
    font-weight: bold;
    font-size: 72px;
    margin-top: 120px;
    margin-bottom: 120px;
  }
  @media screen and (max-width: 767px) {
    h1 {
      margin-top: 45px;
      margin-bottom: 45px;
    }
  }
</style>
<InternalLayout>
  <div id="pearly-main">
    <ScrollImage />
    <TextGrid title="PEARLY BITES">
      <li>Brand Identity + Positioning</li>
      <li>Logo Design</li>
      <li>Art + Illustration</li>
      <li>Product Design (UX/UI)</li>
      <li>CX</li>
      <li>Interior Design</li>
      <li>Social Content + Advertising</li>
      <li>Writing + Editing</li>
      <li>Signage + Display</li>
      <li>Surprise + Delight</li>
    </TextGrid>
    <div class="image-flex">
      <Image class="image-92" src={FrontDesk} alt="Pearly Bites" />
      <div class="textbox">
        <h1>Your Pet's Teeth Cleaning<br /> Just Graduated</h1>
      </div>
      <Image class="image-92" src={Bag} alt="Pearly Bites" />
      <Image class="image-73" src={Site} alt="Pearly Bites" />
      <div class="textbox">
        <h1>A Human Approach to<br /> Your Pet's Dental Care</h1>
      </div>
      <Image class="image-100" src={ExamRoom} alt="Pearly Bites" />
      <h2>Interior renderings:</h2>
      <Image class="image-73" src={Interiors} alt="Pearly Bites" />
      <h1>Turning Growls into Grins</h1>
      <Image class="image-42" src={SocialPages} alt="Pearly Bites" />
      <Image class="image-58" src={Tote} alt="Pearly Bites" />
      <Image class="image-100" src={Cards} alt="Pearly Bites" />
      <Image class="image-58" src={SocialGrid} alt="Pearly Bites" />
      <h1>Teeth Cleanings without the Bite</h1>
      <Image class="image-100" src={Stationary} alt="Pearly Bites" />
      <Image class="image-73" src={Carousel} alt="Pearly Bites" />
    </div>
  </div>
  <script></script>
</InternalLayout>
