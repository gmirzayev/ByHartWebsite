---
import HeroPill from "@components/HeroPill.astro";
import Navigation from "@components/Navigation.astro";
import HeartCursor from "@assets/HeartCursor.png";
import ImageGrid from "@components/ImageGrid.astro";
import Testimonial from "@components/Testimonial.astro";
import Footer from "@components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://use.typekit.net/qmm6obl.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&display=swap"
      rel="stylesheet"
    />
    <style>
      html {
        cursor:
          url("../assets/HeartCursor.png") 16 16,
          auto;
        margin: 0;
        padding: 0;
      }
      main {
        background-image: url("../assets/Home/grain-background.png");
        background-repeat: repeat;
        background-size: auto;
        position: relative;
        overflow: hidden;
        z-index: 10;
        padding: 0;
        margin: 0;
      }
      body {
        padding-bottom: 100vh;
        width: 100%;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <main>
      <Navigation />
      <HeroPill />
      <ImageGrid />
      <!-- <Testimonial /> -->
    </main>
    <Footer />
  </body>
</html>
