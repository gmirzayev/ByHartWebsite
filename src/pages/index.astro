---
import "../styles/utils.css";
import HeroPill from "@components/HeroPill.astro";
import Navigation from "@components/Navigation.astro";
import HeartCursor from "@assets/HeartCursor.png";
import ImageGrid from "@components/ImageGrid.astro";
import Testimonial from "@components/Testimonial.astro";
import Footer from "@components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel=”mask-icon” href=/favicon.svg” color=”#000000">
    <link rel="apple-touch-icon" href="/favicon.png">
    <link rel="stylesheet" href="https://use.typekit.net/qmm6obl.css" />
    <style>
      html {
        margin: 0;
        padding: 0;
      }
      main {
        background-color: #1d1a1a;
        background-image: url("../assets/Home/img/grain-background.png");
        background-repeat: repeat;
        background-size: auto;
        position: relative;
        overflow: hidden;
        z-index: 10;
        padding: 0;
        margin: 0;
      }
      body {
        padding-bottom: 100vh;
        width: 100%;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <main>
      <Navigation />
      <HeroPill />
      <ImageGrid />
      <!-- <Testimonial /> -->
    </main>
    <Footer />
  </body>
</html>
