---
const brand = "Bluprint";
const tagline = "Watch + Learn";
const tags = [
  "Brand Identity + Positioning",
  "Logo Design",
  "Video + Photography",
  "Art + Illustration",
  "Product Design (UX/UI)",
  "CX",
  "Interior Design",
  "Original Naming",
  "Physical Goods Development + Design",
  "Print + Packaging",
  "Organic + Paid Social Content",
  "Writing + Editing",
  "Qualitative Research",
  "Surprise + Delight",
  "Visual Identity",
];

import "@styles/utils.css";
import ProjectLayout from "@layouts/ProjectLayout.astro";
import ProjectTags from "@components/ProjectTags.astro";
import ProjectHead from "@components/ProjectHead.astro";
import Image from "astro/components/Image.astro";
import Navigation from "@components/Navigation.astro";
import Header from "@assets/Bluprint/img/Bluprint_Header.png";
import HeaderMobile from "@assets/Bluprint/img/Bluprint_Header_Mobile.png";
import CrochetBox from "@assets/Bluprint/Bluprint_CrochetBox.gif";
import Quilt from "@assets/Bluprint/img/Bluprint_Quilt.jpg";
import LifeStyle1 from "@assets/Bluprint/img/Bluprint_Lifestyle_1.jpg";
import Paint from "@assets/Bluprint/img/Bluprint_Paint.png";
import Colors from "@assets/Bluprint/img/Bluprint_BrandColors.jpg";
import Ad1 from "@assets/Bluprint/img/Bluprint_Ad_1.jpg";
import MultiCat from "@assets/Bluprint/img/Bluprint_MultiCat.jpg";
import Cake from "@assets/Bluprint/Bluprint_Cake.mp4";
import Fox1 from "@assets/Bluprint/img/Bluprint_Fox.jpg";
import HomePage from "@assets/Bluprint/img/Bluprint_Homepage.png";
import SocialGrid from "@assets/Bluprint/Bluprint_SocialGrid.mp4";
import Ad2 from "@assets/Bluprint/Bluprint_Ad.mp4";
import Jump1 from "@assets/Bluprint/img/Bluprint_Jump1.jpg";
import Jump2 from "@assets/Bluprint/img/Bluprint_Jump2.jpg";
import Disco from "@assets/Bluprint/Bluprint_Disco.mp4";
import Fox2 from "@assets/Bluprint/img/Bluprint_Fox2.jpg";
import MakeupBag from "@assets/Bluprint/Bluprint_MakeupBag.mp4";
import Ad3 from "@assets/Bluprint/img/Bluprint_Ad_3.png";
import LifeStyle2 from "@assets/Bluprint/img/Bluprint_Lifestyle_2.jpg";
import Patches from "@assets/Bluprint/img/Bluprint_Patches.png";
import Ad4 from "@assets/Bluprint/img/Bluprint_Ad_4.jpg";
import Ad5 from "@assets/Bluprint/img/Bluprint_Ad_5.jpg";
import Embroidery from "@assets/Bluprint/img/Bluprint_Box_Embroidery.jpg";
import Boxes from "@assets/Bluprint/Bluprint_Boxes.mp4";
import Collateral from "@assets/Bluprint/img/Bluprint_Box_Collateral.jpg";
import Grid1 from "@assets/Bluprint/img/Bluprint_Grid_1.png";
import Grid2 from "@assets/Bluprint/img/Bluprint_Grid_2.png";
import Grid3 from "@assets/Bluprint/img/Bluprint_Grid_3.png";
import Grid4 from "@assets/Bluprint/img/Bluprint_Grid_4.png";
import Grid5 from "@assets/Bluprint/img/Bluprint_Grid_5.png";
import Grid6 from "@assets/Bluprint/img/Bluprint_Grid_6.png";
import Grid7 from "@assets/Bluprint/img/Bluprint_Grid_7.png";
import Grid8 from "@assets/Bluprint/img/Bluprint_Grid_8.png";
import Grid9 from "@assets/Bluprint/img/Bluprint_Grid_9.png";
import Grid10 from "@assets/Bluprint/img/Bluprint_Grid_10.png";
import ProjectsCarousel from "@components/ProjectsCarousel.astro";
import VimeoPlayer from "@components/VimeoPlayer.astro";
---

<style>
  .karla {
    font-family: "Karla", sans-serif;
  }
</style>
<ProjectLayout
  hero={Header}
  mobile={HeaderMobile}
  brand={brand}
  tagline={tagline}
  tags={tags}
>
  <div
    class="flex items-center w-full flex-col md:flex-row mb-[45px] md:mb-[120px] md:px-[60px]"
  >
    <div class="w-full md:w-[50%] p-[15%] md:p-[10%]">
      <Image
        class="h-auto w-full rounded-sm md:rounded-md"
        src={CrochetBox}
        alt="Bluprint"
      />
    </div>
    <Image
      class="h-auto w-full px-[30px] md:w-[50%]"
      src={Quilt}
      alt="Bluprint"
    />
  </div>
  <VimeoPlayer
    class="my-[45px] md:my-[120px]"
    video="1035014266"
    height="56.25%"
    action="unpause"
  />
  <div class="px-[20px] md:px-[200px] my-[45px] md:my-[120px]">
    <Image
      class="h-auto w-full rounded-sm md:rounded-md"
      src={LifeStyle1}
      alt="Bluprint"
    />
  </div>
  <div
    class="flex flex-col mx-[25px] md:flex-row md:justify-center my-[45px] md:my-[120px]"
  >
    <div class="md:flex md:flex-col md:w-[50%] md:items-end text-[#363131]">
      <div>
        <h1 class="karla text-[18px] font-[700] tracking-[18%]">
          BRAND PROMISE
        </h1>
        <p
          class="karla text-[68px] font-[700] md:text-[58px] md:text-[72px] lg:text-[98px]"
        >
          "I did it!"
        </p>
      </div>
    </div>
    <p
      class="karla text-[16px] md:w-[50%] md:pr-[5%] md:ml-[50px] lg:pr-[15%] text-[#363131]"
    >
      In an always-on world, we help you unwind — and create something
      meaningful. We build confidence by supporting you with inspiration, giving
      you expert instruction, and inviting you into a passionate community that
      gets you (no matter where you are in your journey). Here, you can enjoy
      the space to do more of what you love.
    </p>
  </div>
  <Image class="my-[45px] md:my-[120px]" src={Paint} alt="Bluprint" />
  <div
    class="flex flex-col md:items-center md:flex-row my-[45px] md:my-[120px] md:px-[180px] gap-[45px] md:gap-0"
  >
    <div class="md:w-[50%] px-[77px] md:px-[10%]">
      <Image
        class="w-full h-auto rounded-sm md:rounded-md"
        src={Colors}
        alt="Bluprint"
      />
    </div>
    <div class="md:w-[50%] px-[20px] md:px-[5%]">
      <Image
        class="w-full h-auto rounded-sm md:rounded-md"
        src={Ad1}
        alt="Bluprint"
      />
    </div>
  </div>
  <div
    class="flex flex-row px-[20px] md:px-[60px] my-[45px] md:my-[120px] gap-[10px] md:gap-[40px] items-center"
  >
    <div class="w-[33%] p-[.5%]">
      <Image
        class="w-full rounded-sm md:rounded-md"
        src={MultiCat}
        alt="Bluprint"
      />
    </div>
    <div class="w-[33%] rounded-sm md:rounded-md overflow-hidden">
      <video class="w-full" playsinline loop autoplay muted>
        <source src={Cake} />
      </video>
    </div>
    <div class="w-[33%] p-[.5%]">
      <Image
        class="w-full rounded-sm md:rounded-md"
        src={Fox1}
        alt="Bluprint"
      />
    </div>
  </div>
  <div
    class="my-[45px] mx-[25px] karla md:my-[120px] md:columns-2 md:mx-[250px] md:gap-[80px]"
  >
    <h1 class="mb-[40px] font-[700] text-[24px] text-[#363131]">
      Brand Pillars
    </h1>
    <h2 class="text-[#CF3538] font-[700] tracking-widest">
      WE RESPECT YOUR TIME
    </h2>
    <p class="mb-[40px] md:pr-[20px] text-[#363131]">
      We help you cut through the startup hassle by curating everything you need
      in one place and meeting you on your favorite platform. From project kits
      designed for your skill level to step-by-step guidance, you can be assured
      that you’ll make something great here.
    </p>
    <h2 class="text-[#CF3538] font-[700] tracking-widest">WE'VE BEEN THERE</h2>
    <p class="mb-[40px] md:pr-[20px] text-[#363131]">
      We anticipate all the hills and valleys because we’ve gone through them
      too. At every turn, it feels like there’s a real person helping you avoid
      common mistakes and setting you up for success.
    </p>
    <h2 class="text-[#CF3538] font-[700] tracking-widest">
      WE'RE FOR EVERY MAKER
    </h2>
    <p class="mb-[40px] text-[#363131]">
      Whether you’re a never-crafted newbie or an accomplished maker with
      decades of experience, we help you discover the best options for you and
      grow your skills.
    </p>
    <h2 class="text-[#CF3538] font-[700] tracking-widest">WE KEEP IT FRESH</h2>
    <p class="mb-[40px] text-[#363131]">
      We’re that endlessly creative friend who’s always in the know about the
      next incredible thing, from trends and techniques to tools and tips.
      There’s always something new to see and try.
    </p>
    <h2 class="text-[#CF3538] font-[700] tracking-widest">
      WE BELIEVE IN THE JOY OF CREATIVITY
    </h2>
    <p class="mb-[40px] text-[#363131]">
      You love making. We get it because we feel the same way. We understand one
      of the greatest sources of happiness is the creative world we build.
    </p>
  </div>
  <Image class="w-full h-auto" src={HomePage} alt="Bluprint" />
  <div>
    <video playsinline loop autoplay muted class="w-full">
      <source src={SocialGrid} />
    </video>
  </div>
  <div
    class="flex flex-col md:flex-row mt-[45px] md:my-[100px] items-center md:px-[120px] gap-[45px] md:gap-0"
  >
    <div class="md:w-1/2 px-[20px] md:p-[10%]">
      <Image
        class="h-auto w-full rounded-sm md:rounded-md"
        src={Ad3}
        alt="Bluprint"
      />
    </div>
    <div class="md:w-1/2">
      <video
        loop
        playsinline
        autoplay
        muted
        class="h-auto w-full rounded-0 md:rounded-sm md:rounded-md"
      >
        <source src={Ad2} />
      </video>
    </div>
  </div>
  <div class="flex flex-row bg-[#028282]">
    <div class="w-[50%] p-[6%]">
      <Image
        class="w-full rounded-sm md:rounded-md"
        src={Jump1}
        alt="Bluprint"
      />
    </div>
    <div class="w-[50%] p-[10%]">
      <Image
        class="w-full rounded-sm md:rounded-md"
        src={Jump2}
        alt="Bluprint"
      />
    </div>
  </div>
  <VimeoPlayer
    class="px-0 md:px-[200px] mb-[45px] md:my-[120px] rc-md-only"
    video="1035014250"
    height="56.25%"
    action="unpause"
  />
  <div
    class="mx-[10px] flex flex-row md:mx-[40px] my-[45px] md:my-[120px] items-center"
  >
    <div class="w-1/3 p-[1%]">
      <video
        loop
        playsinline
        autoplay
        muted
        class="h-auto w-full rounded-sm md:rounded-md"
      >
        <source src={Disco} />
      </video>
    </div>
    <div class="w-1/3 p-[1.4%]">
      <Image
        class="h-auto rounded-sm md:rounded-md"
        src={Fox2}
        alt="Bluprint"
      />
    </div>
    <div class="p-[1%] w-1/3">
      <video
        loop
        playsinline
        autoplay
        muted
        class="h-auto rounded-sm md:rounded-md"
      >
        <source src={MakeupBag} />
      </video>
    </div>
  </div>
  <Image
    class="h-auto w-full my-[45px] md:my-[120px]"
    src={LifeStyle2}
    alt="Bluprint"
  />
  <Image
    class="h-auto w-full my-[45px] md:my-[120px]"
    src={Patches}
    alt="Bluprint"
  />
  <VimeoPlayer
    class="md:px-[200px] my-[45px] md:my-[120px] rc-md-only"
    video="1059965808"
    height="56.5%"
    action="unpause"
  />
  <div
    class="flex flex-row w-full px-0 md:px-[60px] my-[45px] md:my-[120px] gap-[20px] md:gap-[75px]"
  >
    <Image
      class="h-auto w-1/2 rounded-sm md:rounded-md"
      src={Ad4}
      alt="Bluprint"
    />
    <Image
      class="h-auto w-1/2 rounded-sm md:rounded-md"
      src={Ad5}
      alt="Bluprint"
    />
  </div>
  <Image
    class="h-auto w-full my-[45px] md:my-[120px]"
    src={Embroidery}
    alt="Bluprint"
  />
  <video
    loop
    playsinline
    autoplay
    muted
    class="h-auto w-full px-[20px] md:w-[50%] mx-auto my-[45px] md:my-[120px] md:px-0 rounded-sm md:rounded-md"
  >
    <source src={Boxes} />
  </video>
  <Image class="h-auto w-full" src={Collateral} alt="Bluprint" />
  <div class="bg-[#242121]">
    <div class="text-white karla py-[30px] pl-[20px] font-[16px]">
      <p class="font-[700] inline-block tracking-[3px]">BLUPRINT</p>
      <p class="inline-block ml-[20px]">Introducing [New Co]</p>
    </div>
    <div class="flex justify-between flex-wrap m-0 px-[20px]">
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid1}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid2}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid3}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid4}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid5}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid6}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid7}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid8}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid9}
        alt="Bluprint"
      />
      <Image
        class="h-auto w-[49.5%] rounded my-1 md:my-1.5"
        src={Grid10}
        alt="Bluprint"
      />
    </div>
  </div>
</ProjectLayout>
