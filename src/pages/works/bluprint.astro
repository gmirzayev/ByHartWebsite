<script>
  import Player from "@vimeo/player";

  const videoContainer1 = document.getElementById("video-container-1");
  const videoContainer2 = document.getElementById("video-container-2");
  const video1 = document.getElementById("video-iframe-1");
  const video2 = document.getElementById("video-iframe-2");
  const player1 = new Player(video1);
  const player2 = new Player(video2);
  const pauseButton1 = document.getElementById("pause-1");
  const playButton1 = document.getElementById("play-1");
  const pauseButton2 = document.getElementById("pause-2");
  const playButton2 = document.getElementById("play-2");

  // Event listener for the play/pause button
  videoContainer1.addEventListener("mouseenter", (event) => {
    player1.getPaused().then((paused) => {
      if (paused) {
        playButton1.style.display = "flex";
      }
    });
  });
  videoContainer1.addEventListener("mouseleave", (event) => {
    playButton1.style.display = "none";
  });
  pauseButton1.addEventListener("click", (event) => {
    player1.getPaused().then((paused) => {
      if (!paused) {
        player1.pause();
        playButton1.style.display = "flex";
      }
    });
  });
  playButton1.addEventListener("click", (event) => {
    player1.getPaused().then((paused) => {
      if (paused) {
        player1.play();
        playButton1.style.display = "none";
      }
    });
  });

  videoContainer2.addEventListener("mouseenter", (event) => {
    player2.getPaused().then((paused) => {
      if (paused) {
        playButton2.style.display = "flex";
      }
    });
  });
  videoContainer2.addEventListener("mouseleave", (event) => {
    playButton2.style.display = "none";
  });
  pauseButton2.addEventListener("click", (event) => {
    player2.getPaused().then((paused) => {
      if (!paused) {
        player2.pause();
        playButton2.style.display = "flex";
      }
    });
  });
  playButton2.addEventListener("click", (event) => {
    player2.getPaused().then((paused) => {
      if (paused) {
        player2.play();
        playButton2.style.display = "none";
      }
    });
  });
</script>
