import Grid8 from "@assets/Bluprint/img/Bluprint_Grid_8.png";
import Grid9 from "@assets/Bluprint/img/Bluprint_Grid_9.png";
import Grid10 from "@assets/Bluprint/img/Bluprint_Grid_10.png";
import ProjectsCarousel from "@components/ProjectsCarousel.astro";
import VimeoPlayer from "@components/VimeoPlayer.astro";
---

<style>
  .karla {
    font-family: "Karla", sans-serif;
  }
  #brand-guide {
    background: #1d1a1a url("/images/noise.svg") repeat;
  }
  .two-up-copy {
    display: flex;
    --one-third-mobile: calc(100% * 1 / 3 - 5px);
    --two-thirds-mobile: calc(100% * 2 / 3 - 5px);
    --half-mobile: calc(50% - 5px);
    &.bias-left-mobile {
      img:first-child {
        width: var(--two-thirds-mobile);
      }
      img:last-child {
        width: var(--one-third-mobile);
      }
    }

    &.bias-right-mobile {
      img:first-child {
        width: var(--one-third-mobile);
      }
      img:last-child {
        width: var(--two-thirds-mobile);
      }
    }

    &.bias-center-mobile {
      img:first-child {
        width: var(--half-mobile);
      }
      img:last-child {
        width: var(--half-mobile);
      }
    }
    @media (min-width: 768px) {
      flex-flow: row nowrap;
      --one-third: calc(100% * 1 / 3 - 37.5px);
      --two-thirds: calc(100% * 2 / 3 - 37.5px);
      --half: calc(50% - 37.5px);

      &.bias-left {
        img:first-child {
          width: var(--two-thirds);
        }
        img:last-child {
          width: var(--one-third);
        }
      }

      &.bias-right {
        img:first-child {
          width: var(--one-third);
        }
        img:last-child {
          width: var(--two-thirds);
        }
      }

      &.bias-center {
        img:first-child {
          width: var(--half);
        }
        img:last-child {
          width: var(--half);
        }
      }
    }
  }
</style>
<ProjectLayout hero={Header} mobile={HeaderMobile} brand={brand} tagline={tagline} tags={tags}>
  <div class="mx-auto mb-[45px] flex w-full max-w-[1320px] flex-col items-center md:mb-[120px] md:flex-row">
    <div class="w-full p-[15%] md:w-[50%] md:p-[10%]">
      <Image class="h-auto w-full rounded-sm md:rounded-md" src={CrochetBox} alt="A bluprint brand shipping box." />
    </div>
    <Image
      class="h-auto w-full px-[30px] md:w-[50%]"
      src={Quilt}
      alt="A person holding up a large quilt in front of them."
    />
  </div>
  <VimeoPlayer class="my-[45px] md:my-[120px]" video="1035014266" height="56.25%" action="unpause" />
  <div class="mx-auto my-[45px] max-w-[1040px] px-[20px] md:my-[120px]">
    <Image
      class="h-auto w-full rounded-sm md:rounded-md"
      src={LifeStyle1}
      alt="A person sitting on a couch knitting."
    />
  </div>
  <div class="mx-[25px] my-[45px] flex flex-col md:my-[120px] md:flex-row md:justify-center">
    <div class="text-[#363131] md:flex md:w-[50%] md:flex-col md:items-end">
      <div>
        <h1 class="karla text-[18px] font-[700] tracking-[18%]">BRAND PROMISE</h1>
        <p class="karla text-[68px] font-[700] md:text-[58px] md:text-[72px] lg:text-[98px]">"I did it!"</p>
      </div>
    </div>
    <p class="karla text-[16px] text-[#363131] md:ml-[50px] md:w-[50%] md:pr-[5%] lg:pr-[15%]">
      In an always-on world, we help you unwind — and create something meaningful. We build confidence by supporting you
      with inspiration, giving you expert instruction, and inviting you into a passionate community that gets you (no
      matter where you are in your journey). Here, you can enjoy the space to do more of what you love.
    </p>
  </div>
  <Image
    class="my-[45px] md:my-[120px]"
