    src={LifeStyle2}
    alt="A person decorating a cake with icing in the shape of leaves."
  />
  <Image
    class="my-[45px] h-auto w-full md:my-[120px]"
    src={Patches}
    alt="Various icon patches for the bluprint brand."
  />
  <VimeoPlayer
    class="rc-md-only mx-auto my-[45px] max-w-[1040px] md:my-[120px] md:px-[25px]"
    video="1059965808"
    height="56.5%"
    action="unpause"
  />
