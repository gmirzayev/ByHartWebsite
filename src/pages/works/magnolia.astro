import Shop from "@assets/Magnolia/img/Magnolia_Shop.png";
import WatchMobile from "@assets/Magnolia/Magnolia_Watch_Mobile.mp4";
import Watch from "@assets/Magnolia/img/Magnolia_Watch.png";
import InternalBlocks from "@assets/Magnolia/img/Magnolia_Internal_Blocks.png";
import Screens from "@assets/Magnolia/img/Magnolia_Screens.png";
---

<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;

    @media (min-width: 768px) {
      grid-template-columns: repeat(3, 1fr);
      margin: 0 auto;
    }
  }

  .item:first-child {
    grid-column: span 2;

    @media (min-width: 768px) {
      grid-column: span 1;
    }
  }

  .two-up-copy {
    display: flex;
    --one-third-mobile: calc(100% * 1 / 3 - 2.5px);
    --two-thirds-mobile: calc(100% * 2 / 3 - 2.5px);
    --half-mobile: calc(50% - 2.5px);
    &.bias-left-mobile {
      img:first-child {
        width: var(--two-thirds-mobile);
      }
      img:last-child {
        width: var(--one-third-mobile);
      }
    }

    &.bias-right-mobile {
      img:first-child {
        width: var(--one-third-mobile);
      }
      img:last-child {
        width: var(--two-thirds-mobile);
      }
    }

    &.bias-center-mobile {
      img:first-child {
        width: var(--half-mobile);
      }
      img:last-child {
        width: var(--half-mobile);
      }
    }
    @media (min-width: 768px) {
      flex-flow: row nowrap;
      --one-third: calc(100% * 1 / 3 - 7.5px);
      --two-thirds: calc(100% * 2 / 3 - 7.5px);
      --half: calc(50% - 7.5px);

      &.bias-left {
        img:first-child {
          width: var(--two-thirds);
        }
        img:last-child {
          width: var(--one-third);
        }
      }

      &.bias-right {
        img:first-child {
          width: var(--one-third);
        }
        img:last-child {
          width: var(--two-thirds);
        }
      }

      &.bias-center {
        img:first-child {
          width: var(--half);
        }
        img:last-child {
          width: var(--half);
        }
      }
    }
  }
</style>
<ProjectLayout hero={Header} mobile={HeaderMobile} brand={brand} tagline={tagline} tags={tags}>
  <VideoLoop src={Introduction} class="sized hidden w-full md:mb-[120px] md:block" />
  <VideoLoop src={IntroductionMobile} class="sized mb-[45px] block w-full md:hidden" />
  <VideoLoop src={Social} class="sized mx-auto my-[45px] w-[220px] rounded-md md:my-[120px] md:w-[345px]" />

  <div
    class="two-up-copy bias-center bias-center-mobile mx-auto my-[45px] max-w-[840px] flex-row gap-[5px] px-[20px] md:my-[120px] md:gap-[15px]"
  >
    <Image src={AppNav1} class="rounded-md md:rounded-lg" alt="Screenshot of Magnolia mobile app." />
