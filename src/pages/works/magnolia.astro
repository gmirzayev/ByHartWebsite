---
const brand = "Magnolia";
const tagline = "Chip + Jo Go DTC";
const tags = [
  "Brand Identity + Positioning",
  "Product Design (UX/UI)",
  "CX",
  "Organic + Paid Social Content",
  "Writing + Editing",
  "Qualitative Research",
  "Surprise + Delight",
  "Visual Identity",
];

import "@styles/utils.css";
import ProjectLayout from "@layouts/ProjectLayout.astro";
import Image from "astro/components/Image.astro";
import VimeoPlayer from "@components/VimeoPlayer.astro";
import VideoLoop from "@components/VideoLoop.astro";

import Header from "@assets/Magnolia/img/Magnolia_Header.png";
import HeaderMobile from "@assets/Magnolia/img/Magnolia_Header_Mobile.png";
import Introduction from "@assets/Magnolia/Magnolia_Introduction.mp4";
import IntroductionMobile from "@assets/Magnolia/Magnolia_Introduction_Mobile.mp4";
import Social from "@assets/Magnolia/Magnolia_Social.mp4";
import AppNav1 from "@assets/Magnolia/img/Magnolia_App_Nav.png";
import RecipeApp from "@assets/Magnolia/img/Magnolia_App_Nav_Recipe.png";
import Article from "@assets/Magnolia/img/Magnolia_App_Nav_Article.png";
import ShopApp from "@assets/Magnolia/img/Magnolia_App_Nav_Shop.png";
import Profile from "@assets/Magnolia/img/Magnolia_App_Nav_Profile.png";
import Birthday from "@assets/Magnolia/img/Magnolia_App_Nav_Birthday.png";
import AppNav2 from "@assets/Magnolia/img/Magnolia_App_Nav_2.png";
import Table from "@assets/Magnolia/img/Magnolia_Table.png";
import NetworkCard from "@assets/Magnolia/Magnolia_Network_Card.mp4";
import WatchWeb1 from "@assets/Magnolia/img/Magnolia_Watch_Web_1.png";
import WatchWeb2 from "@assets/Magnolia/img/Magnolia_Watch_Web_2.png";
import NetworkHome from "@assets/Magnolia/img/Magnolia_Network_Home.png";
import Salad from "@assets/Magnolia/img/Magnolia_Salad.png";
import Joanna from "@assets/Magnolia/img/Magnolia_Joanna.png";
import Cooking from "@assets/Magnolia/img/Magnolia_Cooking.png";
import NetworkWatch from "@assets/Magnolia/Magnolia_Network_Watch.mp4";
import Recipe from "@assets/Magnolia/img/Magnolia_Recipe.png";
import Store from "@assets/Magnolia/img/Magnolia_Store.png";
import Gallery from "@assets/Magnolia/img/Magnolia_Gallery.png";
