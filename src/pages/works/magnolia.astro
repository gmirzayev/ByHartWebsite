    <Image src={ShopApp} class="rounded-md md:rounded-lg" alt="Screenshot of Magnolia mobile app shop page." />
  </div>
  <div class="mx-auto my-[45px] grid w-full max-w-[1040px] grid-cols-3 gap-[5px] px-[20px] md:my-[120px] md:gap-[15px]">
