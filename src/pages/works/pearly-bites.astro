---
const brand = "Pearly Bites";
const tagline = "Come. Sit. Smile.";
const tags = [
  "Brand Identity + Positioning",
  "Logo Design",
  "Art + Illustration",
  "Product Design (UX/UI)",
  "CX",
  "Interior Design",
  "Print + Packaging",
  "Organic + Paid Social Content",
  "Writing + Editing",
  "Signage + Display",
  "Surprise + Delight",
  "Visual Identity",
  "Theatrics",
];

import "@styles/utils.css";
import ProjectLayout from "@layouts/ProjectLayout.astro";
import ProjectTags from "@components/ProjectTags.astro";
import ProjectHead from "@components/ProjectHead.astro";
import Image from "astro/components/Image.astro";
import Navigation from "@components/Navigation.astro";
import ProjectsCarousel from "@components/ProjectsCarousel.astro";
import OneUp from "@components/OneUp.astro";

import Header from "@assets/PearlyBites/img/PearlyBites_Header_Desktop.png";
import HeaderMobile from "@assets/PearlyBites/img/PearlyBites_Header_Mobile.png";
import FrontDesk from "@assets/PearlyBites/img/PearlyBites_FrontDesk.png";
import Bag from "@assets/PearlyBites/PearlyBites_Bag.mp4";
import BetterDental from "@assets/PearlyBites/img/PearlyBites_BetterDental.png";
import Site from "@assets/PearlyBites/img/PearlyBites_Site.png";
import ExamRoom from "@assets/PearlyBites/img/PearlyBites_ExamRoom.png";
import InteriorLeft from "@assets/PearlyBites/img/PearlyBites_Interior_Left.png";
import InteriorRight from "@assets/PearlyBites/img/PearlyBites_Interior_Right.png";
import SocialPages from "@assets/PearlyBites/img/PearlyBites_SocialPages.png";
import Tote from "@assets/PearlyBites/img/PearlyBites_Tote.png";
import Cards from "@assets/PearlyBites/img/PearlyBites_BusinessCards.jpg";
import SocialGrid from "@assets/PearlyBites/img/PearlyBites_SocialGrid.png";
import Stationary from "@assets/PearlyBites/img/PearlyBites_Stationary.png";
import Carousel from "@assets/PearlyBites/img/PearlyBites_SocialCarousel.png";
---

<style>
  .karla {
    font-family: "Karla", sans-serif;
    color: #182241;
  }
  .utile {
    font-family: "utile-display", sans-serif;
    color: #182241;
  }

  .slogan{
    margin: 40px 20px;
    font: 700 26px/1.2 "Karla", sans-serif;
    letter-spacing: -0.52px;
    text-align:center;

    @media(min-width:768px){
      margin:120px 60px;
      font-size:36px;
      letter-spacing: -0.72px;
    }
  }
</style>
<ProjectLayout
  hero={Header}
  mobile={HeaderMobile}
  brand={brand}
  tagline={tagline}
  tags={tags}
>
  <Image
    class="w-full h-auto px-[20px] md:px-[60px]"
    src={FrontDesk}
    alt="Pearly Bites"
  />
  <div class="slogan">
    Your Pet's Teeth Cleaning Just Graduated
  </div>
  <div
    class="flex w-full justify-center items-center flex-col gap-[45px] md:gap-0 md:flex-row my-[45px] md:my-[120px] px-[77px] md:px-[60px]"
  >
    <Image
      class="h-auto w-full md:w-[50%] rounded-md md:rounded-lg"
      src={BetterDental}
      alt="Pearly Bites"
    />
    <video
      loop
      playsinline
      autoplay
      muted
      class="w-full md:w-[50%] md:mt-0 md:w-[45%]"
    >
      <source src={Bag} />
    </video>
  </div>

  <OneUp src={Site} class="spaced" max="1040px" alt="Pearly Bites" />

  <Image
    class="w-full h-auto my-[45px] md:my-[120px]"
    src={ExamRoom}
    alt="Pearly Bites"
  />

  <section class="spaced">
    <h1 style="margin-bottom:0;">Interior refresh renderings</h1>
  </section>
  <div
    class="w-full flex flex-col md:flex-row gap-[45px] md:gap-[15px] px-[20px] md:px-[60px] my-[45px] md:my-[120px]"
  >
    <Image
      class="w-full md:w-2/3 h-auto rounded-md md:rounded-lg"
      src={InteriorLeft}
      alt="Pearly Bites"
    />
    <Image
      class="w-full md:w-1/3 h-auto rounded-md md:rounded-lg"
      src={InteriorRight}
      alt="Pearly Bites"
    />
  </div>
  <div class="slogan">
    Turning Growls into Grins
  </div>


  <OneUp src={SocialPages} class="spaced" max="840px" alt="Pearly Bites" />
  <OneUp src={Tote} class="spaced" max="840px" alt="Pearly Bites" />

  <Image
    class="h-auto w-full my-[45px] md:my-[120px]"
    src={Cards}
    alt="Pearly Bites"
  />

  <OneUp src={SocialGrid} class="spaced" max="840px" alt="Pearly Bites" />

  <div class="slogan">
    Teeth Cleanings without the Bite
  </div>

  <Image class="w-full h-auto" src={Stationary} alt="Pearly Bites" />

  <OneUp src={Carousel} class="spaced" max="1040px" alt="Pearly Bites" />
</ProjectLayout>
