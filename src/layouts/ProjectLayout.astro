---
import InternalLayout from "./InternalLayout.astro"
import ProjectTags from "@components/ProjectTags.astro";
import ProjectHead from "@components/ProjectHead.astro";
import ProjectsCarousel from "@components/ProjectsCarousel.astro";

const {hero, mobile, brand, tagline, tags, theme="light"} = Astro.props
const title = `${brand} (By Hart)`

// TODO: handle mobile-vs-desktop hero images
//       handle video hero images -> og:image

---

<InternalLayout title={title} subtitle={tagline} image={hero}>
    <ProjectHead hero={hero} mobile={mobile} brand={brand} tagline={tagline} theme={theme} />
    <ProjectTags title={brand} tags={tags} theme={theme} />
    <article class="project">
        <slot />
    </article>
    <ProjectsCarousel name={brand} />
</InternalLayout>