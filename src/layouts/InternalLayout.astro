---
import "../styles/utils.css";
import Footer from "@components/Footer.astro";

// optional OpenGraph data
let {title, subtitle, image} = Astro.props
title = title ? `${title} (By Hart)` : "By Hart"

const baseURL = "https://byhartwebsite.pages.dev"
const imageURL = image ? [baseURL, image.src].join("/") : ''

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <link rel="icon" href="/favicon.svg">
    <link rel=”mask-icon” href=/favicon.svg” color=”#000000">
    <link rel="apple-touch-icon" href="/favicon.png">
    <link rel="stylesheet" href="https://use.typekit.net/qmm6obl.css" />

    <slot name="head" />

    {image && <>
      <meta property="og:image" content={imageURL} />
      <meta property="og:image:secure_url" content={imageURL} />
      <meta property="twitter:image" content={imageURL} />
      <meta property="og:image:width" content={image.width} />
      <meta property="og:image:height" content={image.height} />
    </>}

    <meta property="twitter:title" content={title} />
    <meta property="og:title" content={title} />
    {subtitle && <>
      <meta property="twitter:card" content={subtitle} />
      <meta property="og:description" content={subtitle} />
      <meta name="description" content={subtitle}>
    </>}

    <style>
      html {
        margin: 0;
        padding: 0;
      }
      main {
        background-color: white;
        position: relative;
        z-index: 10;
        box-sizing: border-box;
        /* width: 100vw; */
        padding: 0;
        margin: 0;
        /* overflow: hidden; */
        /* width: 100%; */
      }
      body {
        padding-bottom: 100vh;
        margin: 0;
        width: 100%;
        overflow-x: hidden;
      }
      .placeholder {
        height: 800px;
        /* width: 1440px; */
        background-color: gray;
      }
      .service-container {
        height: 800px;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
      <!-- your content is injected here -->
    </main>
    <Footer />
  </body>
</html>
