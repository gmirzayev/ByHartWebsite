---
import "../styles/utils.css";
import Image from "astro/components/Image.astro";
import Logo from "@assets/HomeLogo.png";
import DarkLogo from "@assets/LogoDark.png";
import HeartDropdown from "@assets/HeartDropdown.svg";
import CloseButton from "@assets/CloseButton.png";
import GlassesTest from "@assets/eye_test_cut.webm";
const { theme } = Astro.props;
---

<style>
  nav {
    font-family: "Karla";
    font-weight: bold;
    font-size: 16px;
    line-height: 19px;
    letter-spacing: 0.15em;
    color: #faf7f4;
    padding: 25px;
    display: flex;
    align-items: center;
  }

  .dark {
    color: #faf7f4;
  }
  .light {
    color: black;
  }
  .nav-link {
    position: relative;
    box-sizing: border-box;
    display: inline-block;
    width: 180px;
  }
  .nav-link span {
    display: inline-block;
    max-width: 0%;
    vertical-align: bottom;
    overflow: hidden;
    white-space: nowrap;
    transition: max-width 1s ease-in-out;
  }
  .logo {
    width: 80px;
    height: auto;
    position: relative;
  }
  .mobile-dropdown-toggle {
    display: none;
    background: none;
    padding: 0;
    border: none;
  }
  .nav-link--header {
    font-size: 34px;
    letter-spacing: 0;
    margin-bottom: 50px;
  }

  .nav-link--email-button {
    color: black;
    background-color: #ff97fd;
    padding: 10px 20px;
    font-size: 16px;
    width: 270px;
    text-align: center;
  }

  .mobile-nav-link--email {
    color: white;
    font-size: 16px;
    letter-spacing: 0;
    font-weight: normal;
    margin-top: 20px;
  }

  .mobile-nav-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .dropdown-close {
    position: absolute;
    top: 20px;
    right: 20px;
  }
  .svg-text {
    fill: black;
    font-size: 12px;
    letter-spacing: 2px;
    font-weight: 500;
  }
  #nav-instagram {
    position: absolute;
    top: 50px;
    left: 80px;
    rotate: 260deg;
  }
  /* #nav-substack {
      position: absolute;
      top: -20px;
      left: 170px;
      rotate: 5deg;
    } */
  #nav-vimeo {
    position: absolute;
    top: -25px;
    left: 170px;
    rotate: 5deg;
  }
  #nav-linkedin {
    position: absolute;
    top: 2px;
    left: 250px;
    rotate: 27deg;
  }
  .overflow-hidden {
    overflow: hidden;
  }
  .dropdown-link-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100vh;
    height: -webkit-fill-available;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0;
    padding-left: 7vw;
    padding-right: 7vw;

    background: #a92325;
    z-index: 0;

    opacity: 0;
    transform: translateY(-100%);
    transition:
      transform 0.2s,
      opacity 0.2s;
  }
  .mobile-dropdown-toggle {
    display: initial;
  }
  #mobile-nav.dropdown-opened > .dropdown-link-container {
    opacity: 1;
    transform: translateY(0);
    z-index: 8;
  }
  #mobile-nav:not(.dropdown-opened) > .mobile-dropdown-toggle {
    z-index: 0;
  }
  #mobile-nav.dropdown-opened > .logo-link,
  .mobile-dropdown-toggle {
    z-index: 9;
  }
  #dropdown-open {
    display: block;
  }
  #dropdown-close {
    display: none;
  }
  #mobile-nav.dropdown-opened #dropdown-open {
    display: none;
  }
  #mobile-nav.dropdown-opened #dropdown-close {
    display: block;
  }

  @media (min-width: 768px) {
    .nav-link::after {
      content: attr(data-hover);
      position: absolute;
      left:0;
      top:1em;
      width: 185px;
      height: 38px;
      border-radius: 35px;
      color: black;
      font-size: 13px;
      font-family: "Karla";
      background-color: #ebd4c7;
      text-align: center;
      line-height: 38px;
      opacity:0;
      transform-origin: top left;
      transform: translate(-1em, 1em) rotate(16deg);
      transition: opacity 333ms, transform 333ms;
      pointer-events: none;
    }

    .nav-link:hover::after {
      opacity:1;
      transform: rotate(8deg);
    }

    .nav-link:hover span {
      max-width: 100%;
    }
  }
</style>
<header>
  <nav id="main-nav">
    <div id="mobile-nav" class="flex justify-between w-full md:hidden">
      <a href="/" class="logo-link"
        >{
          theme == "light" ? (
            <Image class="logo" src={DarkLogo} alt="The letter H." />
          ) : (
            <Image class="logo" src={Logo} alt="The letter H." />
          )
        }</a
      >
      <button
        id="dropdown-toggle"
        class="mobile-dropdown-toggle"
        aria-hidden="true"
      >
        <Image id="dropdown-open" src={HeartDropdown} alt="hearts" />
        <Image id="dropdown-close" alt="X" src={CloseButton} />
      </button>
      <div class="dropdown-link-container">
        <a href="/" class="mobile-nav-link nav-link--header">SEE OUR WORK</a>
        <a class="mobile-nav-link nav-link--header">GET TO KNOW US</a>
        <a
          id="nav-link--email-button"
          class="mobile-nav-link nav-link--email-button">COPY OUR EMAIL ADDY</a
        >
        <p id="nav-email" class="mobile-nav-link mobile-nav-link--email">
          getcreative@byhart.studio
        </p>
        <div class="mt-[50px] relative flex w-full">
          <a
            id="nav-instagram"
            class="video-link"
            href="www.instagram.com"
            target="_blank"
          >
            <svg width="100" height="20">
              <defs>
                <path id="curve1" d="M 0 20 Q 50 13 100 20" fill="transparent"
                ></path>
              </defs>
              <text class="svg-text">
                <textPath href="#curve1">INSTAGRAM</textPath>
              </text>
            </svg>
          </a>
          <!-- <a
            id="nav-substack"
            class="video-link"
            href="www.instagram.com"
            target="_blank"
          >
            <svg width="100" height="20">
              <defs>
                <path id="curve2" d="M 0 20 Q 50 13 100 20" fill="transparent"
                ></path>
              </defs>
              <text class="svg-text">
                <textPath href="#curve2">SUBSTACK</textPath>
              </text>
            </svg>
          </a> -->
          <a
            id="nav-vimeo"
            class="video-link"
            href="www.instagram.com"
            target="_blank"
          >
            <svg width="100" height="20">
              <defs>
                <path id="curve3" d="M 0 20 Q 50 13 100 20" fill="transparent"
                ></path>
              </defs>
              <text class="svg-text">
                <textPath href="#curve3">VIMEO</textPath>
              </text>
            </svg>
          </a>
          <a
            id="nav-linkedin"
            class="video-link"
            href="www.instagram.com"
            target="_blank"
          >
            <svg width="100" height="20">
              <text class="svg-text">
                <textPath href="#curve3">LINKEDIN</textPath>
              </text>
            </svg>
          </a>
          <video
            class="max-w-[400px] ml-[150px]"
            playsinline
            src={GlassesTest}
            autoplay="true"
            loop="true"
            muted></video>
        </div>
      </div>
    </div>
    <!-- DESKTOP NAV -->
    <div
      class="hidden md:!flex md:items-center"
      style={{ color: `${theme == "light" ? "black" : "#F7F4ED"}` }}
    >
      <a href="/" class="mr-[80px]">
        {
          theme == "light" ? (
            <Image class="logo" src={DarkLogo} alt="The letter H." />
          ) : (
            <Image class="logo" src={Logo} alt="The letter H." />
          )
        }</a
      >
      <a class="nav-link" data-hover="PORTFOLIO">SEE <span>BY HART</span></a>
      <a class="nav-link" data-hover="SARAH + SERVICES"
        >KNOW <span>BY HART</span></a
      >
      <a class="nav-link" data-hover="CONTACT">SPEAK <span>BY HART</span></a>
      <!-- <div class="mobile-nav-container"> -->

      <!-- </div> -->
    </div>
  </nav>
  <script>
    const nav = document.getElementById("mobile-nav");
    const navButton = document.getElementById("dropdown-toggle");

    navButton.addEventListener("click", (event) => {
      nav.classList.toggle("dropdown-opened");
      document.body.classList.toggle("overflow-hidden");
    });

    const navEmailButton = document.getElementById("nav-link--email-button");

    navEmailButton.addEventListener("click", async (event) => {
      try {
        await navigator.clipboard.writeText("getcreative@byhart.studio");
        setTimeout(
          () => (navEmailButton.textContent = "READY FOR PASTING!"),
          10
        );
        setTimeout(() => {
          navEmailButton.textContent = "COPY OUR EMAIL ADDY";
        }, 2000);
      } catch (err) {
        console.error("Failed to copy: ", err);
      }
    });
  </script>
</header>
