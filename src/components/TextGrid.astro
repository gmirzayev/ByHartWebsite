---
const { title } = Astro.props;
---

<style is:global>
  .text-grid {
    width: 50%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    font-family: "Karla";
    margin-bottom: 100px;
  }
  .text-grid--header {
    margin-left: 60px;
    margin-top: 10px;
    font-weight: bold;
  }
  .text-grid--header p {
    display: inline-block;
  }
  .text-grid--flex {
    flex: 100%;
    height: 200px;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    margin-left: 250px;
  }
  .text-grid--flex li {
    list-style: none;
    width: 300px;
    padding: 10px 0;
  }
</style>
<div class="text-grid">
  <div class="text-grid--header">
    <p>{title}</p>
    <p style={{ marginLeft: "190px" }}>WHAT WE DID</p>
  </div>
  <ul class="text-grid--flex">
    <slot />
  </ul>
</div>
