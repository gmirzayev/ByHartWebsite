---
import "../styles/utils.css";

const CATEGORIES = {
    strategy:[
        "Original Naming",
        "Brand Identity + Positioning",
        "Surprise + Delight",
        "Qualitative Research",
        "CX",
    ],
    story:[
        "Interviews",
        "Writing + Editing",
        "Quiz Development",
        "Editorial Content",
        "Organic + Paid Social Content",
    ],
    stage:[
        "Interior Design",
        "Physical Goods Development + Design",
        "Print + Packaging",
        "Signage + Display",
        "Theatrics",
    ],
    screen:[
        "Logo Design",
        "Visual Identity",
        "Video + Photography",
        "Art + Illustration",
        "Product Design (UX/UI)",
    ],
}


let { title, theme="light", tags=[] } = Astro.props;
theme = theme=="dark" ? "dark" : "light"

// check for typos in the tag list
let knownTags = Object.entries(CATEGORIES).map(([_, group]) => group).flat()
for (let t of tags){
    if (!knownTags.includes(t)) throw new Error(`${title} tag "${t}" not defined in ProjectTags.astro`)
}

let groups = []
for (let group in CATEGORIES){
    let items = CATEGORIES[group].filter(t => tags.includes(t))
    if (items.length>0) groups.push({ group, items })
}

---

<style>
    .project-tags{
        position: relative;
        display:flex;
        flex-direction: row;
        padding:30px;

        font: 300 16px/1.3 "Karla", sans-serif;
        color: black;

        h1{
            flex-basis: 20%;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            padding-right: 2%;
        }

        ul{
            list-style-type: none;
            width:20%;
            li:first-child{
                font-weight: 700;
                text-transform: uppercase;
                opacity:.333;
                letter-spacing: 0.1em;
            }

            li{
                width:80%;
                margin-bottom:.666em;
            }
        }

        &.dark{
            color: #F7F4ED;
            background: var(--charcoal);
            ul li:first-child{
                opacity: .5;
            }
        }

        @media (max-width: 767px) {
            padding: 40px 20px 20px 20px;
            flex-wrap: wrap;

            h1{
                top:20px;
                position: absolute;
                width: calc(100% - 40px);
            }

            ul{
                width: 50%;
                margin-top: 1em;
            }
        }

        @media (max-width: 450px) {
            flex-direction: column;

            ul{
                width:100%;
            }
        }
    }
</style>

<div class:list={["project-tags", theme]}>
    <h1>{title}</h1>
    {groups.map(({group, items}) => <ul>
        <li>{group}</li>
        {items.map(item => <li>{item}</li>)}
    </ul>)}
</div>