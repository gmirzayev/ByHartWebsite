<style is:global>
  .image-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1820px;
    margin-left: 5%;
    margin-right: 5%;
    box-sizing: border-box;
  }

  .image-grid--column {
    width: calc(32% - 1%);
    row-gap: 59px;
    display: none;
    flex-direction: column;
  }

  .image-grid--column-m {
    width: 33%;
    display: none;
    flex-direction: column;
  }

  .grid-item {
    display: none;
  }

  .active {
    display: flex;
  }

  .active-item {
    display: block;
  }

  .grid-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 5.87px;
  }

  @media screen and (max-width: 767px) {
    .image-grid--column {
      width: 46%;
    }
  }

</style>
