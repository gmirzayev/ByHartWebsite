  }
  .grid-item-label {
    color: #faf7f4;
    font-family: "utile-display", sans-serif;
    margin-top: 5px;
    letter-spacing: 0.1em;
    font-size: 14px;
    font-weight: 500;
  }

  .active-item {
    display: block;
  }

  .grid-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 5.87px;
  }

  .grid-image-m {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 5.87px;
  }

  @media screen and (min-width: 767px) {
    .image-grid {
      column-gap: 3%;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      margin-bottom: 500px;
    }
    .image-grid--column {
      width: 100%;
      display: none;
      display: grid;
      gap: 1%;
    }
    .image-grid--column-mobile {
      display: none;
    }
    .tooltip {
      position: absolute;
      background-color: #f7eee3;
      color: black;
      font-family: Karla;
      font-size: 14px;
      letter-spacing: 2px;
      padding: 10px 20px;
      border-radius: 35px;
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.2s ease;
      white-space: nowrap;
      rotate: -15deg;
    }
    .grid-item-label {
      display: none;
    }
  }
</style>
